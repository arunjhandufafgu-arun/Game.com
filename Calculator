        <h3>Currency Converter</h3>

        <input id="amount" type="number" placeholder="Enter amount">

        <select id="convertType">
            <option value="inr-usd">INR  USD</option>
            <option value="inr-eur">INR  EUR</option>
            <option value="inr-pkr">INR  PKR</option>
            <option value="usd-inr">USD  INR</option>
            <option value="eur-inr">EUR  INR</option>
            <option value="pkr-inr">PKR  INR</option>
        </select>

        <button class="eq" style="margin-top:10px;" onclick="convertCurrency()">Convert</button>

        <p id="curResult"></p>
    </div>

